{
    "global_fields": {
        "distance": {
            "label": "Distance:",
            "property": "global_distance",
            "datatype": "float",
            "format": "{:.1f}",
            "default": 140.0,
            "width": 7,
            "tip": "Distance to the\nobserved target\nunits: pc"
        },
        "stellar_rv": {
            "label": "Stellar RV:",
            "property": "global_stellar_rv",
            "datatype": "float",
            "format": "{:.1f}",
            "default": 0.0,
            "width": 7,
            "tip": "Radial velocity (helioc.)\nof the observed target\nunits: km/s"
        }
    },
    "molecule_fields": {
        "temp": {
            "label": "Temperature:",
            "attribute": "temp",
            "datatype": "float",
            "format": "{:.1f}",
            "default": 300.0,
            "width": 4,
            "tip": "Excitation temperature\nunits: K"
        },
        "radius": {
            "label": "Radius:",
            "attribute": "radius",
            "datatype": "float",
            "format": "{:.2f}",
            "default": 1.0,
            "width": 4,
            "tip": "Equivalent radius\nunits: au"
        },
        "n_mol": {
            "label": "Col. Density:",
            "attribute": "n_mol",
            "datatype": "float",
            "format": "{:.2e}",
            "default": 1e15,
            "width": 7,
            "tip": "Column density\nunits: cm^(-2)"
        },
        "fwhm": {
            "label": "FWHM:",
            "attribute": "fwhm",
            "datatype": "float",
            "format": "{:.2f}",
            "default": 160.0,
            "width": 7,
            "tip": "FWHM for convolution\nof the model spectra\nunits: km/s"
        },
        "broad": {
            "label": "Broadening:",
            "attribute": "broad",
            "datatype": "float",
            "format": "{:.2f}",
            "default": 0.1,
            "width": 7,
            "tip": "Line broadening (FWHM)\n(thermal/turbulence)\nunits: km/s"
        },
        "rv_shift": {
            "label": "RV Shift:",
            "attribute": "rv_shift",
            "datatype": "float",
            "format": "{:.2f}",
            "default": 0.1,
            "width": 7,
            "tip": "Radial velocity (helioc.)\nof the molecule data\nunits: km/s"
        }
    }
}
